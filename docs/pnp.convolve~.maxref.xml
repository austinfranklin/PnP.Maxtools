<c74object name="pnp.convolve~">

	<digest>
		Convolve two signals together
	</digest>
	
	<description>
		<m>pnp.convolve~</m> utilizes and FFT to convolve two signals together. Two input signals are needed as inputs as well as an additional optional argument which determines the relative strength, or mix, of each signal in the output. This can be set with a floating point number between 0 and 1.
	</description>
	
	<!--METADATA-->
	<metadatalist>
		<metadata name="author">Austin Franklin</metadata>
		<metadata name="tag"><PnP class="Maxtools"></PnP></metadata>
		<metadata name="tag">Audio</metadata>
		<metadata name="tag">Effect</metadata>
		<metadata name="tag">FFT</metadata>
	</metadatalist>
	
	<!--INLETS-->
	<inletlist>
		<inlet id="0" type="signal">
			<digest>Audio Signal Input</digest>
		</inlet>

		<inlet id="1" type="signal">
			<digest>Audio Signal Input</digest>
		</inlet>

		<inlet id="2" type="float">
			<digest>Mix (0-1)</digest>
		</inlet>
	</inletlist>

	<!--OUTLETS-->
	<outletlist>
		<outlet id="0" type="signal">
			<digest>Output Signal</digest>
		</outlet>
	</outletlist>
	
	<!--ARGUMENTS-->
	<objarglist>
		<objarg name="Mix" optional="1" type="float">
			<digest>Sets the mix level between the two incoming signals, where 0 is only signal 1 input and 1 is only signal 2 input
			</digest>
		</objarg>
	</objarglist>
	
	<!--MESSAGES-->
	<methodlist>
		<method name="float">
			<arglist>
				<arg name="parameter-settings" optional="0" type="float"/>
			</arglist>
			<digest>
				Function depends on inlet
			</digest>
			<description>
				Numbers can be used to control parameter values. Any numbers sent to the left inlet will be ignored.
			</description>
		</method>

		<method name="signal">
			<arglist>
				<arg name="parameter-settings" optional="0" type="signal"/>
			</arglist>
			<digest>
				Function depends on inlet
			</digest>
			<description>
				In left inlet: Monoaural <m>signal</m>.
			</description>
		</method>
	</methodlist>
	
	<!--SEEALSO-->
	<seealsolist>
		<seealso name="pnp.split~"/>
		<seealso name="pfft~"/>
	</seealsolist>
	
</c74object>