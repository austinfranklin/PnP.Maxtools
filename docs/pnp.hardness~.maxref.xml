<c74object name="pnp.hardness~">

	<digest>
		Calculates the hardness of an incoming audio signal
	</digest>
	
	<description>
		<m>pnp.hardness~</m> calculates the apparent hardness of an incoming 
		audio signal by measuring the attack gradient and spectral content of 
		each attack.
	</description>
	
	<!--METADATA-->
	<metadatalist>
		<metadata name="author">Austin Franklin</metadata>
		<metadata name="tag"><PnP class="Maxtools"></PnP></metadata>
		<metadata name="tag">Audio</metadata>
		<metadata name="tag">Descriptor</metadata>
		<metadata name="tag">FFT</metadata>
	</metadatalist>
	
	<!--INLETS-->
	<inletlist>
		<inlet id="0" type="signal">
			<digest>Audio Signal Input</digest>
		</inlet>
	</inletlist>

	<!--OUTLETS-->
	<outletlist>
		<outlet id="0" type="float">
			<digest>Hardness</digest>
		</outlet>
	</outletlist>
	
	<!--ARGUMENTS-->
	<objarglist>
	</objarglist>
	
	<!--MESSAGES-->
	<methodlist>
		<method name="signal">
			<arglist>
				<arg name="parameter-settings" optional="0" type="signal"/>
			</arglist>
			<description>
				In left inlet: Monoaural <m>signal</m>.
			</description>
		</method>
	</methodlist>
	
